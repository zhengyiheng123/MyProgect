<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/living_tablayout"
        android:orientation="horizontal">

        <com.flyco.tablayout.CommonTabLayout
            tl:tl_indicator_margin_bottom="5dp"
            android:id="@+id/common_tablayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tl:tl_indicator_anim_enable="false"
            tl:tl_iconVisible="false"
            tl:tl_indicator_gravity="BOTTOM"
            tl:tl_indicator_corner_radius="1.5dp"
            tl:tl_indicator_color="@color/tablayout_textcolor_checked"
            tl:tl_indicator_height="3dp"
            tl:tl_indicator_width="20dp"
            tl:tl_textSelectColor="@color/tablayout_textcolor_checked"
            tl:tl_textUnselectColor="@color/tablayout_textcolor_unchecked"
            tl:tl_textsize="16dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_start_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@mipmap/download_playback"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>