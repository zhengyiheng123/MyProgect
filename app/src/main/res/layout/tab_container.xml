<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_resource_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四年级八单元” 整合思路现场直播"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_below="@+id/tv_resource_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朱颜"
            android:textColor="@color/c666"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:layout_toRightOf="@+id/tv_teacher_name"
            android:layout_below="@+id/tv_resource_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5月24日 19：00"
            android:textColor="@color/c666"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_resource_title"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:textColor="@color/c666"
            android:text="在线人数：200"
            android:layout_marginRight="12dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        />
    <include layout="@layout/tab_layout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>